@model LegalEazeRewrite.Models.ViewModels.ManageUserRolesViewModel

@{
    ViewData["Title"] = "Manage Roles for " + Model.Email;
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Manage">
    <div class="form-group">
        <input type="hidden" asp-for="UserId" />
        <input type="hidden" asp-for="Email" />
    </div>
    <div class="form-group">
        <label asp-for="Roles">Roles</label>
        <div>
            @for (int i = 0; i < Model.Roles.Count; i++)
            {
                <div class="form-check">
                    <input type="hidden" asp-for="Roles[i].RoleName" />
                    <input type="checkbox" asp-for="Roles[i].Selected" class="form-check-input" />
                    <label class="form-check-label">@Model.Roles[i].RoleName</label>
                </div>
            }
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>

